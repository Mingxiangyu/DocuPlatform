# DocuVault 开发环境配置 - 连接模拟后端

# API配置
VITE_API_BASE_URL=http://localhost:8000/api
VITE_MOCK_API=false

# 功能开关
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_VIRTUAL_DOM_HIGHLIGHTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_SECURITY_FEATURES=true

# 调试配置
VITE_DEBUG_MODE=true
VITE_EVENT_BUS_DEBUG=true
VITE_VIRTUAL_DOM_DEBUG=false

# 缓存配置
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300000

# 性能配置
VITE_PERFORMANCE_SAMPLING_RATE=1.0
VITE_ERROR_REPORTING_ENABLED=true

# 安全配置
VITE_CSRF_PROTECTION=true
VITE_XSS_PROTECTION=true
VITE_RATE_LIMITING=true

# 后端连接配置
VITE_BACKEND_HEALTH_CHECK_URL=http://localhost:8000/health
VITE_BACKEND_TIMEOUT=10000
