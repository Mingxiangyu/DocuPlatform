# DocuVault 前端环境变量配置示例
# 复制此文件为 .env 并填入实际值

# API配置
VITE_API_URL="http://localhost:8000"
VITE_API_TIMEOUT="10000"

# 事件总线配置
VITE_EVENT_BUS_DEBUG="true"
VITE_EVENT_BUS_MAX_LISTENERS="50"

# 文本高亮配置
VITE_HIGHLIGHT_COLORS="yellow,green,blue,pink,orange"
VITE_HIGHLIGHT_DEFAULT_COLOR="yellow"

# 虚拟DOM配置
VITE_VIRTUAL_DOM_CACHE_SIZE="1000"
VITE_VIRTUAL_DOM_DEBUG="false"

# 上传配置
VITE_UPLOAD_MAX_SIZE="10485760"
VITE_UPLOAD_CHUNK_SIZE="1048576"

# 微信配置（模拟）
VITE_WECHAT_APP_ID="mock_wechat_app_id"

# 支付配置（模拟）
VITE_PAYMENT_MOCK="true"
VITE_PAYMENT_TIMEOUT="30000"

# 缓存配置
VITE_CACHE_ENABLED="true"
VITE_CACHE_TTL="300000"

# 性能监控
VITE_PERFORMANCE_MONITORING="true"
VITE_ERROR_REPORTING="true"

# 开发配置
VITE_DEV_TOOLS="true"
VITE_SOURCE_MAP="true"
