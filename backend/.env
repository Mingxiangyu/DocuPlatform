# DocuVault 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 数据库配置
DATABASE_URL="postgresql://docuvault:password@localhost:5432/docuvault"

# Redis配置
REDIS_URL="redis://localhost:6379"

# JWT配置
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# 服务器配置
NODE_ENV="development"
PORT=8000
FRONTEND_URL="http://localhost:3000"

# 文件上传配置
UPLOAD_MAX_SIZE="10mb"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# 邮件服务配置（可选）
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""

# 微信OAuth配置（模拟数据）
WECHAT_APP_ID="mock_wechat_app_id"
WECHAT_APP_SECRET="mock_wechat_app_secret"

# 支付配置（模拟数据）
# 微信支付
WECHAT_PAY_APP_ID="mock_wechat_pay_app_id"
WECHAT_PAY_MCH_ID="mock_wechat_pay_mch_id"
WECHAT_PAY_KEY="mock_wechat_pay_key"
WECHAT_PAY_CERT_PATH=""
WECHAT_PAY_KEY_PATH=""

# 支付宝支付
ALIPAY_APP_ID="mock_alipay_app_id"
ALIPAY_PRIVATE_KEY="mock_alipay_private_key"
ALIPAY_PUBLIC_KEY="mock_alipay_public_key"

# 日志配置
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# 缓存配置
CACHE_TTL="3600"
CACHE_MAX_KEYS="10000"

# 安全配置
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX="100"
CORS_ORIGIN="http://localhost:3000,http://localhost:3001,http://localhost:3002"

# 事件总线配置
EVENT_BUS_DEBUG="true"
EVENT_BUS_MAX_LISTENERS="100"

# 搜索配置
SEARCH_INDEX_BATCH_SIZE="100"
SEARCH_HIGHLIGHT_LENGTH="200"

# 监控配置
HEALTH_CHECK_INTERVAL="30000"
METRICS_ENABLED="true"
