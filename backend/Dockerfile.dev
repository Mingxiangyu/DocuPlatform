FROM node:18-alpine

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apk add --no-cache git python3 make g++

# 复制package文件
COPY package*.json ./

# 安装依赖
RUN npm ci --only=production=false

# 安装全局工具
RUN npm install -g tsx prisma

# 复制源代码
COPY . .

# 生成Prisma客户端
RUN npx prisma generate

# 暴露端口
EXPOSE 8000

# 启动开发服务器
CMD ["npm", "run", "dev"]
